{
  "version": 2,
  "installCommand": "pip install poetry && poetry install",
  "buildCommand": "echo 'Build completed'",
  "devCommand": "uvicorn api.index:app --host 0.0.0.0 --port $PORT",
  "functions": {
    "api/migrate.py": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.py" },
    { "source": "/api/migrate", "destination": "/api/migrate.py" }
  ],
  "env": {
    "PYTHONPATH": "."
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://the-lab-academy.vercel.app" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,PUT,DELETE,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type,Authorization" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" }
      ]
    }
  ]
}
